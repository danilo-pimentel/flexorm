{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowUnreachableCode": true,
        "module": "commonjs",
        "target": "es6",
        "sourceMap": false,
        "allowJs": false,
        "outDir": "dist",
        "declaration": true,
        "noImplicitAny": false,
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        ".vscode"
    ]
}
